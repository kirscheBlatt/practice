        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toStartOf="@+id/no11"
        app:layout_constraintTop_toBottomOf="@+id/no11"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@+id/no13"
        />

    <TextView
        android:id="@+id/no13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toStartOf="@+id/no12"
        app:layout_constraintTop_toBottomOf="@+id/no12"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@+id/no14"
        />

    <TextView
        android:id="@+id/no14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toStartOf="@+id/no13"
        app:layout_constraintTop_toBottomOf="@+id/no13"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@+id/no15"
        />

    <TextView
